@model IEnumerable<LonghornBankProject.Models.Dispute>

@{
    ViewBag.Title = "Index";
}

<h2>Managerial Tasks To Complete</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            Customer Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transaction.TransactionID)
        </th>
        <th>
            Transaction Amount
        </th>
        <th>
            Dispute Amount
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delete)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.FirstName) @Html.DisplayFor(modelItem => item.Customer.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Transaction.TransactionID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Transaction.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Delete)
        </td>
        <td>
            @Html.ActionLink("Resolve", "ResolveDispute", new { id = item.DisputeID }) |
        </td>
    </tr>
}

</table>
