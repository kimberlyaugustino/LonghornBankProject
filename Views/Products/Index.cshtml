@model IEnumerable<LonghornBankProject.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>My Accounts</h2>

<p>
    @Html.ActionLink("Add An Account", "CreateAccount", "Products", null, null)
</p>
<p>
    @Html.ActionLink("Create an IRA account", "ConfirmIRA")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccountName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td style="text-align:right">
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }) |
            @Html.ActionLink("View Transactions", "Index", "Transactions", new { id=item.ProductID }, null) |
            @Html.ActionLink("Make A Transaction", "Create", "Transactions" , new { id = item.ProductID }, null)
        </td>
    </tr>
}

</table>
